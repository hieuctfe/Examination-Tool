/* You can add global styles to this file, and also import other style files */
@import 'variables';
@import "~ng-pick-datetime/assets/style/picker.min.css";
@import "assets/css/theme";
@import '~angular-tree-component/dist/angular-tree-component.css';
@import '~swiper/dist/css/swiper.min.css';
@import "~@progress/kendo-theme-default/scss/treeview";

.sidenav.sidenav-fixed {
  overflow-y: auto !important;

}

.sidenav.sidenav-fixed::-webkit-scrollbar-track {
  -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
  border-radius: 10px;
  background-color: #F5F5F5;
}

.sidenav.sidenav-fixed::-webkit-scrollbar {
  width: 10px;
  background-color: #F5F5F5;
}

[hidden] {
  display: none !important;
}

li {
  list-style-type: none;
}

a {
  text-decoration: none;
}

.logo {
  max-width: 268px;
  img {
    max-width: 100%;
    height: auto;
  }
}

mex-create-exam {
  width: 100%;
}

.pointer {
  cursor: pointer;
}

wizard-navigation-bar {
  margin-right: 1.5rem;
  li.current:after, li.editing:after {
    background: lightgreen !important;
    border-color: lightgreen !important;
  }
  li.done:after {
    background: $main-cl !important;
  }
}

owl-date-time-container {
  .owl-dt-calendar-table .owl-dt-calendar-cell-selected {
    background: $main-cl !important;
  }
  .owl-dt-container-buttons {
    color: $main-cl !important;
  }
}

.input-group .note-editor {
  width: calc(100% - 36px);
}

.question-box img {
  width: 100% !important;
}

.dataTables_wrapper {
  input {
    display: inline-block;
    padding: .375rem .75rem;
    font-size: 1rem;
    line-height: 1.5;
    color: #495057;
    background-color: #fff;
    background-clip: padding-box;
    border: 1px solid #ced4da;
    border-radius: .25rem;
    transition: border-color .15s ease-in-out, box-shadow .15s ease-in-out;
  }

  select {
    height: calc(2.25rem + 2px);
    display: inline-block;
    padding: .375rem .75rem;
    font-size: 1rem;
    line-height: 1.5;
    color: #495057;
    background-color: #fff;
    background-clip: padding-box;
    border: 1px solid #ced4da;
    border-radius: .25rem;
    transition: border-color .15s ease-in-out, box-shadow .15s ease-in-out;
  }
}

.max-size {
  max-width: 80% !important;
  width: 80%;
}

input.form-control.invalid {
  border-color: #dc3545 !important;
}

.k-treeview {
  .k-in {
    width: 100%;
    &:hover {
      border: 0;
    }
    &.k-state-selected {
      background: $main-cl;
    }
    &.k-state-focused {
      box-shadow: none;
    }
  }
}

.k-widget ::selection {
  background: $main-cl;
}

.cdk-overlay-container {
  z-index: 99999999999;
}

.multiselect-dropdown .dropdown-btn {
  padding: 8px 12px !important;
  border: 1px solid #ced4da !important;
}

.multiselect-dropdown .dropdown-btn .dropdown-down {
  border-top: 8px solid black !important;
  border-left: 4px solid transparent !important;
  border-right: 4px solid transparent !important;
}

.sortable-container .sortable-list {
  .active {
    .card {
      background: skyblue !important;
      color: black !important;
      font-weight: bold;
    }
  }
  .card {
    border-radius: 0;
  }
}

ul:not(.browser-default) {
  padding-left: 0;
  list-style-type: none;
  > li {
    list-style-type: none;
  }
}

.pagination {
  justify-content: flex-end;
  li {
    display: flex;
    text-align: center;
    vertical-align: top;
    border: 1px solid $main-cl;
    &:first-child {
      border-top-left-radius: 10px;
      border-bottom-left-radius: 10px;
    }
    &:last-child {
      border-top-right-radius: 10px;
      border-bottom-right-radius: 10px;
    }
    &.disabled {
      background: darkgray;
      cursor: no-drop;
      a {
        color: white;
      }
    }
    &:not(:nth-last-child(1)) {
      border-right: none;
    }
    &:not(.disabled) {
      cursor: pointer;
    }
    a {
      color: $main-cl;
      display: inline-block;
      padding: 10px 20px;
      span {
        display: inline-block;
        width: 100%;
        height: 100%;
      }
    }
  }
  li.current {
    cursor: auto;
    background-color: $main-cl;
    border: 1px solid $main-cl;
    a {
      color: white;
    }
  }
}

.spinner.inside {
  position: relative;
  width: 100vw;
  height: 100vh;
}

.double-bounce1, .double-bounce2 {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background-color: white;
  opacity: 0.6;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -webkit-animation: sk-bounce 2.0s infinite ease-in-out;
  animation: sk-bounce 2.0s infinite ease-in-out;
}

.double-bounce2 {
  -webkit-animation-delay: -1.0s;
  animation-delay: -1.0s;
}

@-webkit-keyframes sk-bounce {
  0%, 100% {
    -webkit-transform: scale(0.0)
  }
  50% {
    -webkit-transform: scale(1.0)
  }
}

@keyframes sk-bounce {
  0%, 100% {
    transform: scale(0.0);
    -webkit-transform: scale(0.0);
  }
  50% {
    transform: scale(1.0);
    -webkit-transform: scale(1.0);
  }
}

#main > *:not(router-outlet) {
  flex: 1;
  display: flex;
  overflow: hidden;
}

.swal2-container {
  z-index: 9999999999999999991 !important;
}

.dropdown-menu.show {
  top: 0 !important;
  left: -128px !important;
  .dropdown-item.active, .dropdown-item:active {
    background: $main-cl !important;
    color: white !important;
  }
}

.node-content-wrapper{
  width: 100%;
}
